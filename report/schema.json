{
 "$schema": "http://json-schema.org/draft-07/schema#",
 "type": "object",
 "required": ["date", "market_summaries", "economic_events", "news_by_sector",
"watchlist_alerts", "emerging_themes", "sentiment_indicators"],
 "properties": {
 "date": {"type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"},
 "market_summaries": {
 "type": "object",
 "required": ["global", "asia", "indonesia"],
 "properties": {
 "global": {"type": "string"},
 "asia": {"type": "string"},
 "indonesia": {"type": "string"}
 }
 },
 "economic_events": {
 "type": "array",
 "items": {
 "type": "object",
 "required": ["event", "impact"],
 "properties": {
 "event": {"type": "string"},
 "impact": {"type": "string"}
 }
 }
 },
 "news_by_sector": {
 "type": "object",
 "patternProperties": {
 ".*": {
 "type": "array",
 "items": {
 "type": "object",
 "required": ["headline", "sentiment", "source", "url"],
 "properties": {
 "headline": {"type": "string"},
 "sentiment": {"type": "string", "enum": ["Positive", "Negative", "Neutral"]},
 "source": {"type": "string"},
 "url": {"type": "string", "minLength": 8}
 }
 }
 }
 }
 },
 "watchlist_alerts": {
 "type": "array",
 "items": {"type": "string"}
 },
 "emerging_themes": {
 "type": "array",
 "items": {
 "type": "object",
 "required": ["theme", "description"],
 "properties": {
 "theme": {"type": "string"},
 "description": {"type": "string"}
 }
 }
 },
 "sentiment_indicators": {
 "type": "object",
 "patternProperties": {
 ".*": {
 "type": "object",
 "required": ["Positive", "Negative", "Neutral"],
 "properties": {
 "Positive": {"type": "integer"},
 "Negative": {"type": "integer"},
 "Neutral": {"type": "integer"}
 }
 }
 }
 }
 }
}
