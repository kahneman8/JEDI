{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "date",
    "market_summaries",
    "economic_events",
    "news_by_sector",
    "watchlist_alerts",
    "emerging_themes",
    "sentiment_indicators"
  ],
  "properties": {
    "date": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
    "market_summaries": {
      "type": "object",
      "properties": {
        "global": { "type": "string" },
        "asia": { "type": "string" },
        "indonesia": { "type": "string" }
      },
      "required": ["global", "asia", "indonesia"],
      "additionalProperties": false
    },
    "economic_events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "event": { "type": "string" },
          "impact": { "type": "string" }
        },
        "required": ["event", "impact"],
        "additionalProperties": false
      }
    },
    "news_by_sector": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "headline": { "type": "string", "minLength": 2 },
              "source": { "type": "string", "minLength": 2 },
              "url": {
                "type": "string",
                "format": "uri",
                "pattern": "^(https?://)(?!.*example\\.com).+"
              },
              "region": { "type": "string", "enum": ["Global", "Asia", "Indonesia"] },
              "sentiment": { "type": "string", "enum": ["Positive", "Negative", "Neutral"] },
              "priority": { "type": "number" },
              "theme": { "type": "string" }
            },
            "required": ["headline", "source", "url", "region", "sentiment"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "watchlist_alerts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "alert": { "type": "string" },
          "related_topics": { "type": "array", "items": { "type": "string" } },
          "reference_url": {
            "type": "string",
            "format": "uri",
            "pattern": "^(https?://)(?!.*example\\.com).+"
          },
          "ticker": { "type": "string" },
          "sector": { "type": "string" },
          "type": { "type": "string" }
        },
        "required": ["alert"],
        "additionalProperties": false
      }
    },
    "emerging_themes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "theme": { "type": "string" },
          "description": { "type": "string" },
          "region": { "type": "string", "enum": ["Global", "Asia", "Indonesia", "Mixed"] },
          "priority": { "type": "number" },
          "related_news": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["theme", "description"],
        "additionalProperties": false
      }
    },
    "sentiment_indicators": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "Positive": { "type": "integer" },
            "Negative": { "type": "integer" },
            "Neutral": { "type": "integer" }
          },
          "required": ["Positive", "Negative", "Neutral"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
